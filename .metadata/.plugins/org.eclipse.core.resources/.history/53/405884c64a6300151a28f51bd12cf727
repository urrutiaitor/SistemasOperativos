package canibales;

public class Canibal extends Thread{

	Olla olla;
	boolean hambriento;
	
	public Canibal(Olla olla){
		this.olla = olla;
		hambriento = true;
	}
	
	public void run(){
		while(hambriento){
			hambriento = olla.comer();
		}
	}

	public boolean isHambriento() {
		return hambriento;
	}

	public void setHambriento(boolean hambriento) {
		this.hambriento = hambriento;
	}

}
