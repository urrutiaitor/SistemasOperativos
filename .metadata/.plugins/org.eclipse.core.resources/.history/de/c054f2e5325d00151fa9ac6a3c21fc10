package juegoJugador;

public class Jugador {

	int vidas;

	public Jugador(int vidas) {
		super();
		this.vidas = vidas;
	}
	
	public int getVidas(){
		return vidas;
	}
	
	public boolean quitarVida(){
		vidas--;
		if(vidas == 0) return true;
		return false;
	}
	
	public boolean darVida(){
		vidas++;
		if(vidas == 10) return true;
		return false;
	}
}
