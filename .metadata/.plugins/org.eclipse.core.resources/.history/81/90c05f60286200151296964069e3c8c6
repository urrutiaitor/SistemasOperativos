package Inicial;

import java.awt.Color;
import java.util.Arrays;

public class Hogar {

	/*
	 * Variables globales
	 * ATRIBUTOS
	 */
	Habitacion habitaciones[]; //Array de habitaciones
	Puerta puertaEntrada;
	Color color;
	String nombre;
	Direccion direccion;
	
	
	
	/*
	 * CONSTRUCTOR
	 */
	public Hogar(Habitacion[] habitaciones, Puerta puertaEntrada, Color color, String nombre, Direccion direccion) {
		super();
		this.habitaciones = habitaciones;
		this.puertaEntrada = puertaEntrada;
		this.color = color;
		this.nombre = nombre;
		this.direccion = direccion;
	}



	@Override
	public String toString() {
		return "Hogar [habitaciones=" + Arrays.toString(habitaciones) + ", puertaEntrada=" + puertaEntrada + ", color="
				+ color + ", nombre=" + nombre + ", direccion=" + direccion + "]";
	}
	
	
	
}
