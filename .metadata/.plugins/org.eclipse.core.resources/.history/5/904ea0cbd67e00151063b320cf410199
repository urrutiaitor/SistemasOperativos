package itv;

public class Coche extends Thread {

	int id;
	ITV itv;
	
	
	public Coche(int id, ITV itv) {
		super();
		this.id = id;
		this.itv = itv;
	}
	
	public void run(){
		int posicionAparcamiento;
		int posicionCochera;
		
		while(itv.abierto()) {
			if (posicionAparcamiento = itv.entrarEnAparcamiento(id)) {
				posicionCochera = itv.entrarEnCochera(id);
				itv.salir(id);
			}
		}
	}

}
