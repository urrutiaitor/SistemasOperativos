package juegoJugador;

import java.util.concurrent.Semaphore;

public class Main {

	public static void main(String[] args) {
		Jugador jugador = new Jugador(5);
		Semaphore semaforo = new Semaphore(1);
		HiloNegativo hiloNeg = new HiloNegativo(semaforo, jugador);
		HiloPositibo hiloPos = new HiloPositibo(semaforo, jugador);
		
		hiloNeg.start();
		hiloPos.start();
	
	
		while(true){
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			if(jugador.getVidas() == 10){
				System.out.println("El ha positibo ganado");
				hiloNeg.stop();
				break;
			}
			if(jugador.getVidas() == 0){
				System.out.println("El ha negativo ganado");
				hiloPos.stop();
				break;
			}
		}
	}

}
